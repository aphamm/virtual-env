<mujoco model="scene">
    <include file="so101_new_calib.xml" />
    <option integrator="RK4"/>

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
        <rgba haze="0.15 0.25 0.35 1" />
        <global azimuth="160" elevation="-20" offwidth="1920" offheight="1080" />
    </visual>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512"
            height="3072" />
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
            rgb2="0.1 0.2 0.3"
            markrgb="0.8 0.8 0.8" width="300" height="300" />
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
            reflectance="0.2" />
    </asset>

    <worldbody>
        <light pos="0 0 3.5" dir="0 0 -1" directional="true" />
        <!-- Camera positioned level to view the entire robot arm, cube, and box -->
        <!-- Position: centered on X, further back on Y, at arm working height on Z -->
        <!-- Looking horizontally toward the origin where robot base is -->
        <camera name="closeup" pos="0.6 -0.4 0.45" xyaxes="2.0 1.8 0 0.5 1.2 0.7" fovy="50"/>
        <geom name="floor" size="0 0 0.05" pos="0 0 0" type="plane" material="groundplane" 
              contype="1" conaffinity="1"/>
        
        <!-- Red cube to be picked up (sized for gripper, physics enabled, obeys gravity) -->
        <body name="red_cube" pos="0.25 0.003 0.015">
            <!-- Free joint for 6 DoF movement (3 translation + 3 rotation) - allows gravity -->
            <freejoint/>
            <inertial pos="0 0 0" mass="0.001" diaginertia="0.000000167 0.000000167 0.000000167"/>
            <!-- Collision and visual geometry - sized appropriately for gripper -->
            <!-- Rigid contact parameters: very stiff contacts (low time constant, high damping) -->
            <geom name="red_cube_geom" type="box" size="0.012 0.012 0.012" 
                  rgba="1 0 0 1" 
                  contype="1" conaffinity="1"
                  friction="2.0 0.5 0.05"
                  solimp="0.95 0.98 0.001" solref="0.0001 5" margin="0"/>
        </body>
        
        <!-- Blue box container (fixed, open top, physics enabled) -->
        <body name="blue_box" pos="0.25 -0.2 0.0">
            <!-- Fixed to ground, no joint needed -->
            <geom name="blue_box_bottom" type="box" size="0.08 0.08 0.005" pos="0 0 0.005" 
                  rgba="0 0 1 1" 
                  contype="1" conaffinity="1"
                  friction="1 0.005 0.0001"/>
            <geom name="blue_box_front" type="box" size="0.08 0.002 0.025" pos="0 0.08 0.0275" 
                  rgba="0 0 1 1" 
                  contype="1" conaffinity="1"
                  friction="1 0.005 0.0001"/>
            <geom name="blue_box_back" type="box" size="0.08 0.002 0.025" pos="0 -0.08 0.0275" 
                  rgba="0 0 1 1" 
                  contype="1" conaffinity="1"
                  friction="1 0.005 0.0001"/>
            <geom name="blue_box_right" type="box" size="0.002 0.08 0.025" pos="0.08 0 0.0275" 
                  rgba="0 0 1 1" 
                  contype="1" conaffinity="1"
                  friction="1 0.005 0.0001"/>
            <geom name="blue_box_left" type="box" size="0.002 0.08 0.025" pos="-0.08 0 0.0275" 
                  rgba="0 0 1 1" 
                  contype="1" conaffinity="1"
                  friction="1 0.005 0.0001"/>
        </body>
    </worldbody>
</mujoco>